<% if (isAuthenticated) { %>
    <form action="/cart" method="post">
        <button class="btn" type="submit">Add to Cart</button>
        <input type="hidden" name="productId" value="<%= product._id %>">
    </form>
<% } else { %>
    <button class="btn" type="button" onclick="showLoginPopup()">Add to Cart</button>
<% } %>