<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/error-messages.css">
    <link rel="stylesheet" href="/css/cart.css">
    <style>
        .checkout-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
        }

        .checkout-form {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .order-summary {
            background: #f8f9fa;
            padding: 25px;
            border-radius: 12px;
            border-left: 4px solid #00d4aa;
        }

        .form-section {
            margin-bottom: 25px;
        }

        .section-title {
            font-size: 18px;
            font-weight: 600;
            color: #333;
            margin-bottom: 15px;
            padding-bottom: 8px;
            border-bottom: 2px solid #00d4aa;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-bottom: 15px;
        }

        .form-full-row {
            margin-bottom: 15px;
        }

        .form-control {
            display: flex;
            flex-direction: column;
        }

        .form-control label {
            margin-bottom: 5px;
            font-weight: 500;
            color: #555;
        }

        .form-control input,
        .form-control select {
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

        .form-control input:focus,
        .form-control select:focus {
            outline: none;
            border-color: #00d4aa;
            box-shadow: 0 0 0 3px rgba(0, 212, 170, 0.1);
        }

        .error-field {
            border-color: #ff6b6b !important;
            box-shadow: 0 0 0 3px rgba(255, 107, 107, 0.1) !important;
        }

        .payment-methods {
            display: grid;
            gap: 10px;
        }

        .payment-option {
            padding: 15px;
            border: 2px solid #ddd;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }

        .payment-option:hover {
            border-color: #00d4aa;
            background-color: #f0fffe;
        }

        .payment-option.selected {
            border-color: #00d4aa;
            background-color: #f0fffe;
        }

        .payment-option input[type="radio"] {
            margin-right: 12px;
        }

        .payment-option-content {
            flex: 1;
        }

        .payment-title {
            font-weight: 600;
            color: #333;
        }

        .payment-description {
            font-size: 12px;
            color: #666;
            margin-top: 4px;
        }

        .order-item {
            display: flex;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid #eee;
        }

        .order-item:last-child {
            border-bottom: none;
        }

        .item-image {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 8px;
            margin-right: 15px;
        }

        .item-details {
            flex: 1;
        }

        .item-title {
            font-weight: 600;
            color: #333;
            margin-bottom: 5px;
        }

        .item-price {
            color: #00d4aa;
            font-weight: 600;
        }

        .item-quantity {
            color: #666;
            font-size: 14px;
        }

        .order-total {
            border-top: 2px solid #00d4aa;
            padding-top: 15px;
            margin-top: 15px;
        }

        .total-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 8px;
        }

        .total-amount {
            font-size: 20px;
            font-weight: bold;
            color: #333;
        }

        .checkout-btn {
            width: 100%;
            background: linear-gradient(135deg, #00d4aa, #00b894);
            color: white;
            padding: 15px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 20px;
            transition: all 0.3s ease;
        }

        .checkout-btn:hover {
            background: linear-gradient(135deg, #00b894, #00a085);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 212, 170, 0.3);
        }

        @media (max-width: 768px) {
            .checkout-container {
                grid-template-columns: 1fr;
                gap: 20px;
                padding: 15px;
            }

            .form-row {
                grid-template-columns: 1fr;
            }
        }
    </style>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

        <main>
            <!-- Flash Messages -->
            <% if (errorMessage) { %>
                <div class="error-message show">
                    <span><%= errorMessage %></span>
                    <button class="close-btn" onclick="this.parentElement.style.display='none'">&times;</button>
                </div>
            <% } %>
            <% if (successMessage) { %>
                <div class="success-message show">
                    <span><%= successMessage %></span>
                    <button class="close-btn" onclick="this.parentElement.style.display='none'">&times;</button>
                </div>
            <% } %>

            <div class="checkout-container">
                <!-- Checkout Form -->
                <div class="checkout-form">
                    <h1>Checkout</h1>
                    
                    <form action="/checkout" method="POST">
                        <!-- Shipping Address Section -->
                        <div class="form-section">
                            <h3 class="section-title">ðŸšš Shipping Address</h3>
                            
                            <div class="form-full-row">
                                <div class="form-control">
                                    <label for="fullName">Full Name *</label>
                                    <input type="text" 
                                           id="fullName" 
                                           name="fullName" 
                                           value="<%= oldInput.fullName || '' %>"
                                           class="<% if (fieldErrors.fullName) { %>error-field<% } %>"
                                           placeholder="Enter your full name" 
                                           required>
                                </div>
                            </div>

                            <div class="form-full-row">
                                <div class="form-control">
                                    <label for="address">Street Address *</label>
                                    <input type="text" 
                                           id="address" 
                                           name="address" 
                                           value="<%= oldInput.address || '' %>"
                                           class="<% if (fieldErrors.address) { %>error-field<% } %>"
                                           placeholder="Enter your street address" 
                                           required>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-control">
                                    <label for="city">City *</label>
                                    <input type="text" 
                                           id="city" 
                                           name="city" 
                                           value="<%= oldInput.city || '' %>"
                                           class="<% if (fieldErrors.city) { %>error-field<% } %>"
                                           placeholder="Enter city" 
                                           required>
                                </div>
                                <div class="form-control">
                                    <label for="postalCode">Postal Code *</label>
                                    <input type="text" 
                                           id="postalCode" 
                                           name="postalCode" 
                                           value="<%= oldInput.postalCode || '' %>"
                                           class="<% if (fieldErrors.postalCode) { %>error-field<% } %>"
                                           placeholder="Enter postal code" 
                                           required>
                                </div>
                            </div>

                            <div class="form-full-row">
                                <div class="form-control">
                                    <label for="country">Country *</label>
                                    <input type="text" 
                                           id="country" 
                                           name="country" 
                                           value="<%= oldInput.country || '' %>"
                                           class="<% if (fieldErrors.country) { %>error-field<% } %>"
                                           placeholder="Enter country" 
                                           required>
                                </div>
                            </div>
                        </div>

                        <!-- Payment Method Section -->
                        <div class="form-section">
                            <h3 class="section-title">ðŸ’³ Payment Method</h3>
                            
                            <div class="payment-methods">
                                <label class="payment-option <% if (oldInput.paymentMethod === 'cash_on_delivery' || !oldInput.paymentMethod) { %>selected<% } %>" 
                                       onclick="selectPayment(this)">
                                    <input type="radio" 
                                           name="paymentMethod" 
                                           value="cash_on_delivery" 
                                           <% if (oldInput.paymentMethod === 'cash_on_delivery' || !oldInput.paymentMethod) { %>checked<% } %>>
                                    <div class="payment-option-content">
                                        <div class="payment-title">ðŸ’µ Cash on Delivery</div>
                                        <div class="payment-description">Pay when your order arrives</div>
                                    </div>
                                </label>

                                <label class="payment-option <% if (oldInput.paymentMethod === 'credit_card') { %>selected<% } %>" 
                                       onclick="selectPayment(this)">
                                    <input type="radio" 
                                           name="paymentMethod" 
                                           value="credit_card" 
                                           <% if (oldInput.paymentMethod === 'credit_card') { %>checked<% } %>>
                                    <div class="payment-option-content">
                                        <div class="payment-title">ðŸ’³ Credit Card</div>
                                        <div class="payment-description">Secure online payment</div>
                                    </div>
                                </label>

                                <label class="payment-option <% if (oldInput.paymentMethod === 'debit_card') { %>selected<% } %>" 
                                       onclick="selectPayment(this)">
                                    <input type="radio" 
                                           name="paymentMethod" 
                                           value="debit_card" 
                                           <% if (oldInput.paymentMethod === 'debit_card') { %>checked<% } %>>
                                    <div class="payment-option-content">
                                        <div class="payment-title">ðŸ’³ Debit Card</div>
                                        <div class="payment-description">Pay directly from your account</div>
                                    </div>
                                </label>
                            </div>
                        </div>

                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                        <button type="submit" class="checkout-btn">
                            ðŸ›’ Place Order - $<%= totalAmount.toFixed(2) %>
                        </button>
                    </form>
                </div>

                <!-- Order Summary -->
                <div class="order-summary">
                    <h2>ðŸ“‹ Order Summary</h2>
                    
                    <div class="order-items">
                        <% products.forEach(product => { %>
                            <div class="order-item">
                                <img src="/<%= product.imageUrl %>" alt="<%= product.title %>" class="item-image">
                                <div class="item-details">
                                    <div class="item-title"><%= product.title %></div>
                                    <div class="item-quantity">Quantity: <%= product.quantity %></div>
                                    <div class="item-price">$<%= (product.price * product.quantity).toFixed(2) %></div>
                                </div>
                            </div>
                        <% }); %>
                    </div>

                    <div class="order-total">
                        <div class="total-row">
                            <span>Subtotal:</span>
                            <span>$<%= totalAmount.toFixed(2) %></span>
                        </div>
                        <div class="total-row">
                            <span>Shipping:</span>
                            <span style="color: #00d4aa;">FREE</span>
                        </div>
                        <div class="total-row total-amount">
                            <span>Total:</span>
                            <span>$<%= totalAmount.toFixed(2) %></span>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <script>
            function selectPayment(option) {
                // Remove selected class from all options
                document.querySelectorAll('.payment-option').forEach(opt => {
                    opt.classList.remove('selected');
                });
                
                // Add selected class to clicked option
                option.classList.add('selected');
                
                // Check the radio button
                option.querySelector('input[type="radio"]').checked = true;
            }

            // Auto-remove flash messages after 2 seconds (reuse existing functionality)
            document.addEventListener('DOMContentLoaded', function() {
                const flashMessages = document.querySelectorAll('.success-message.show, .error-message.show');
                
                flashMessages.forEach(message => {
                    setTimeout(() => {
                        if (message.parentNode) {
                            message.style.opacity = '0';
                            message.style.transform = 'translateY(-20px)';
                            
                            setTimeout(() => {
                                message.remove();
                            }, 300);
                        }
                    }, 2000);
                });
            });
        </script>

        <%- include('../includes/end.ejs') %>
