<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    <link rel="stylesheet" href="/css/error-messages.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <!-- Flash Messages Display -->
            <% if (errorMessage) { %>
                <div class="error-message">
                    <%= errorMessage %>
                    <button class="message-close" onclick="this.parentElement.remove()" aria-label="Close error message">&times;</button>
                </div>
            <% } %>
            
            <% if (successMessage) { %>
                <div class="success-message">
                    <%= successMessage %>
                    <button class="message-close" onclick="this.parentElement.remove()" aria-label="Close success message">&times;</button>
                </div>
            <% } %>
            <% if (products.length > 0) { %>
                <ul class="cart__item-list">
                    <% products.forEach(p => { %>
                        <li class="cart__item">
                            <img src="/<%= p.imageUrl %>" alt="<%= p.title %>" class="cart__item-img">
                            <h1><%= p.title %></h1>
                            <h2>Quantity: <%= p.quantity %></h2>
                            <form action="/cart-delete-item" method="POST">
                                <input type="hidden" value="<%= p._id %>" name="productId">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="btn danger" type="submit">Delete</button>
                            </form>
                        </li>
                    <% }) %>
                </ul>
                <div class="cart__checkout-actions">
                    <a href="/checkout" class="btn checkout-btn">ðŸ›’ Proceed to Checkout</a>
                    <form class="cart__order-form" action="/create-order" method="POST" style="display: inline;">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button class="submit-order" type="submit" style="margin-left: 10px;">Quick Order (Skip Details)</button>
                    </form>
                </div>
            <% } else { %>
                <h1>No Products in Cart!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>