<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/error-messages.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST" enctype="multipart/form-data">
            <!-- Flash Messages at top of form -->
            <% if (errorMessage) { %>
                <div class="error-message show" style="margin-bottom: 20px;">
                    <span><%= errorMessage %></span>
                    <button class="close-btn" onclick="this.parentElement.style.display='none'">&times;</button>
                </div>
            <% } %>
            <% if (successMessage) { %>
                <div class="success-message show" style="margin-bottom: 20px;">
                    <span><%= successMessage %></span>
                    <button class="close-btn" onclick="this.parentElement.style.display='none'">&times;</button>
                </div>
            <% } %>

            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" 
                       value="<% if (oldInput.title !== undefined) { %><%= oldInput.title %><% } else if (editing && product) { %><%= product.title %><% } %>"
                       class="<% if (locals.fieldErrors && locals.fieldErrors.title) { %>error-field<% } %>">
            </div>
             <div class="form-control">
                <label for="image">Product Image</label>
                <input type="file" name="image" id="image" accept="image/*"
                    class="<% if (locals.fieldErrors && locals.fieldErrors.imageUrl) { %>error-field<% } %>">

                <% if (editing && product.imageUrl) { %>
                    <p>Current Image:</p>
                    <p>Image path: /<%= product.imageUrl %></p>
                    <img src="/<%= product.imageUrl %>" alt="<%= product.title %>" style="max-width:150px;">
                    <small style="color: #666; font-size: 0.85em;">Upload a new image to replace the current one</small>
                <% } else { %>
                    <small style="color: #666; font-size: 0.85em;">Choose an image file from your computer</small>
                <% } %>
            </div>

            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" 
                       value="<% if (oldInput.price !== undefined) { %><%= oldInput.price %><% } else if (editing && product) { %><%= product.price %><% } %>"
                       class="<% if (locals.fieldErrors && locals.fieldErrors.price) { %>error-field<% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5" 
                          class="<% if (locals.fieldErrors && locals.fieldErrors.description) { %>error-field<% } %>"><% if (oldInput.description !== undefined) { %><%= oldInput.description %><% } else if (editing && product) { %><%= product.description %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= product._id %>" name="productId">
            <% } %>
             
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>