exports.getInvoice = (req, res, next) => {

  const orderId = req.params.orderId;

  Order.findById(orderId)
  .then(order => {
    if (!order) {
      return next(new Error('No order found.'));
    }
    if (order.user.userId.toString() !== req.user._id.toString()) {
      return next(new Error('Unauthorized access to invoice.'));
    }
    
    const invoiceName = 'invoice-' + orderId + '.pdf';
    const invoicePath = path.join('data', 'invoices', invoiceName);

    const pdfDoc = new PDFDocument();
    res.setHeader('Content-Type', 'application/pdf');
    res.setHeader('Content-Disposition', 'inline; filename="' + invoiceName + '"');
    pdfDoc.pipe(fs.createWriteStream(invoicePath));
    pdfDoc.pipe(res);

    pdfDoc.text('Invoice', { align: 'center', underline: true });
    pdfDoc.moveDown();
    pdfDoc.text('---------------------------------------------------------------------------------------------------------------------');
    pdfDoc.moveDown();
    pdfDoc.text('Your Order No is: ' + orderId, { align: 'left', fontSize: 20 });

    pdfDoc.moveDown();
    pdfDoc.text('Items: ', { fontSize: 16 });
    pdfDoc.moveDown();
    pdfDoc.end();
  })
  .catch(err => next(err));
};

// Get Checkout Page
exports.getCheckout = (req, res, next) => {
  if (!req.session.isLoggedIn) {
    req.flash('error', 'Please log in to checkout.');
    return res.redirect('/login');
  }

  User.findById(req.session.user._id)
    .then(user => {
      return user.getCart();
    })
    .then(products => {
      if (products.length === 0) {
        req.flash('error', 'Your cart is empty! Add some products first.');
        return res.redirect('/cart');
      }

      // Calculate total amount
      let total = 0;
      products.forEach(p => {
        total += p.quantity * p.price;
      });

      const errorMessage = req.flash('error');
      const successMessage = req.flash('success');
      const oldInput = req.flash('oldInput');
      const fieldErrors = req.flash('fieldErrors');

      res.render('shop/checkout', {
        path: '/checkout',
        pageTitle: 'Checkout',
        products: products,
        totalAmount: total,
        isAuthenticated: req.session.isLoggedIn,
        errorMessage: errorMessage.length > 0 ? errorMessage[0] : null,
        successMessage: successMessage.length > 0 ? successMessage[0] : null,
        oldInput: oldInput.length > 0 ? JSON.parse(oldInput[0]) : {},
        fieldErrors: fieldErrors.length > 0 ? JSON.parse(fieldErrors[0]) : {}
      });
    })
    .catch(err => {
      console.log(err);
      req.flash('error', 'Something went wrong. Please try again.');
      res.redirect('/cart');
    });
};

// Process Checkout
exports.postCheckout = (req, res, next) => {
  if (!req.session.isLoggedIn) {
    req.flash('error', 'Please log in to place an order.');
    return res.redirect('/login');
  }

  const { fullName, address, city, postalCode, country, paymentMethod } = req.body;
  
  // Simple validation
  let fieldErrors = {};
  let oldInput = { fullName, address, city, postalCode, country, paymentMethod };

  if (!fullName || fullName.trim().length < 2) fieldErrors.fullName = true;
  if (!address || address.trim().length < 5) fieldErrors.address = true;
  if (!city || city.trim().length < 2) fieldErrors.city = true;
  if (!postalCode || postalCode.trim().length < 3) fieldErrors.postalCode = true;
  if (!country || country.trim().length < 2) fieldErrors.country = true;
  if (!paymentMethod) fieldErrors.paymentMethod = true;

  if (Object.keys(fieldErrors).length > 0) {
    req.flash('error', 'Please fill in all fields correctly.');
    req.flash('oldInput', JSON.stringify(oldInput));
    req.flash('fieldErrors', JSON.stringify(fieldErrors));
    return res.redirect('/checkout');
  }

  User.findById(req.session.user._id)
    .then(user => {
      return user.getCart().then(products => {
        if (products.length === 0) {
          req.flash('error', 'Your cart is empty!');
          return res.redirect('/cart');
        }

        // Calculate total
        let total = 0;
        const orderItems = products.map(p => {
          total += p.quantity * p.price;
          return {
            product: {
              title: p.title,
              price: p.price,
              imageUrl: p.imageUrl,
              description: p.description
            },
            quantity: p.quantity
          };
        });

        const order = new Order({
          items: orderItems,
          user: {
            userId: user._id,
            name: user.name || user.email || 'Anonymous User'
          },
          shippingAddress: {
            fullName: fullName.trim(),
            address: address.trim(),
            city: city.trim(),
            postalCode: postalCode.trim(),
            country: country.trim()
          },
          paymentMethod: paymentMethod,
          totalAmount: total
        });

        return order.save().then(() => {
          // Clear cart after successful order
          user.cart = { items: [] };
          return user.save().then(() => {
            req.flash('success', 'Order placed successfully! Thank you for your purchase.');
            res.redirect('/orders');
          });
        });
      });
    })
    .catch(err => {
      console.log('Checkout error:', err);
      req.flash('error', 'Failed to place order. Please try again.');
      res.redirect('/checkout');
    });
  
  }
}